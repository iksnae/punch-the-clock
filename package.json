{
  "name": "punch-the-clock",
  "version": "0.1.0",
  "description": "PTC - Punch the Clock: A task-based time tracking CLI for developers and AI coding agents to measure development velocity",
  "main": "dist/index.js",
  "bin": {
    "ptc": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "start": "node dist/cli.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm run test:ci",
    "postinstall": "echo 'PTC installed successfully! Run \"ptc --help\" to get started.'",
    "build:binary": "npm run build && pkg dist/cli.js --targets node18-linux-x64,node18-macos-x64,node18-win-x64 --output dist/ptc",
    "build:all": "npm run build && npm run build:binary"
  },
  "keywords": [
    "time-tracking",
    "cli",
    "developer-tools",
    "productivity",
    "velocity-tracking",
    "estimation",
    "project-management",
    "task-tracking",
    "development-metrics",
    "ai-agents",
    "punch-the-clock",
    "ptc",
    "timeclock"
  ],
  "author": "PTC Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ptc-team/punch-the-clock.git"
  },
  "bugs": {
    "url": "https://github.com/ptc-team/punch-the-clock/issues"
  },
  "homepage": "https://github.com/ptc-team/punch-the-clock#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "pkg": {
    "assets": [
      "dist/**/*",
      "README.md",
      "LICENSE"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64", 
      "node18-win-x64"
    ],
    "outputPath": "binaries"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "date-fns": "^2.30.0",
    "inquirer": "^8.2.6",
    "mysql2": "^3.6.5",
    "ora": "^5.4.1",
    "table": "^6.8.1"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "pkg": "^5.8.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
